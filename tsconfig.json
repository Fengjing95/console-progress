{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["es2017"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "**/__tests__/**"]
}
